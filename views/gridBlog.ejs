<section class="blogs container">
    <div class="blogGrid">
        <% if(blogs.length>0){%>
            <%for(let i=0;i<blogs.length;i++){%>
                <a href="/blog/<%= blogs[i].file_name %>" class="blogCard"><div class="blogItem">
                    <h1><%=blogs[i].title%></h1>
                    <p><%=blogs[i].content.substring(0,300)%>...</p>
                </div></a>
            <%}%>
        <%} else{%>
            <h1 class="noBlog">No Blogs yet...</h1>
        <%}%>
    </div>
</section>